{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,               // ✨ 關閉嚴格模式
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    // ✨✨✨ 新增以下寬鬆設定 ✨✨✨
    "noImplicitAny": false,        // 允許隱含的 any
    "noUnusedLocals": false,       // 允許未使用的變數
    "noUnusedParameters": false,   // 允許未使用的參數
    "strictNullChecks": false      // 關閉嚴格的 null 檢查
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}